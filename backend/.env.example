# ============================================
# AI Medical Clinic Phone Agent - Configuration
# ============================================

# Model & API Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# OpenAI API Key (for Whisper STT)
OPENAI_API_KEY=sk-your-api-key-here

# ElevenLabs API Key (optional, for premium TTS)
ELEVENLABS_API_KEY=your-elevenlabs-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default voice

# Audio Processing Settings
VAD_SILENCE_THRESHOLD=1.5  # Silence duration in seconds before stopping recording
VAD_MIN_SPEECH_LENGTH=0.5  # Minimum speech duration to consider valid
SAMPLE_RATE=16000          # Audio sample rate in Hz
CHUNK_SIZE=1024            # Audio chunk size
AUDIO_FORMAT=PCM_16        # Audio format

# Server Configuration
DEBUG=true
LOG_LEVEL=INFO
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000"]

# Database Paths
SERVICES_JSON_PATH=./app/data/services.json
RESERVATIONS_JSON_PATH=./app/data/reservations.json

# TTS Provider (gtts, elevenlabs, coqui)
TTS_PROVIDER=gtts

# Medical Settings
START_GREETING="Good afternoon, welcome to Central Medical Clinic. How can I help you today?"
CLINIC_NAME="Central Medical Clinic"
CLINIC_PHONE="+1-800-CLINIC"
CLINIC_EMAIL="reception@clinic.example.com"

# Session Settings
SESSION_TIMEOUT=600  # 10 minutes in seconds
MAX_CONCURRENT_CALLS=10
CONVERSATION_HISTORY_SIZE=20  # Number of messages to keep in memory

# Whisper Settings
WHISPER_MODEL=base  # tiny, base, small, medium, large
WHISPER_LANGUAGE=en  # Language code

# Emergency Keywords (comma-separated)
EMERGENCY_KEYWORDS=chest pain,difficulty breathing,severe bleeding,loss of consciousness,allergic reaction,emergency,911,call ambulance

# Logging
LOG_FILE=logs/clinic_agent.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5
